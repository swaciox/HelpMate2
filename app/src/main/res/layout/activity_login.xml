<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.verunex.helpmate.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:id="@+id/background"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/tabs">


            <TextView
                android:text="@string/withoutLoginOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/withoutLoginOr"
                android:layout_below="@+id/withoutLogin"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:id="@+id/appName"
                android:layout_below="@+id/logoDown"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="@string/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/description"
                android:textSize="18dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_below="@+id/appName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp" />

            <TextView
                android:text="@string/withoutLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/withoutLogin"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:layout_below="@+id/description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo_down"
                android:id="@+id/logoDown"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/appName"
                android:layout_marginTop="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo_up"
                android:id="@+id/logoUp"
                android:layout_alignTop="@+id/logoDown"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@+id/background"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:tabBackground="@color/colorButtonBackground"
            app:tabTextColor="@color/unSelectedColorText"

            app:tabSelectedTextColor="@color/selectedColorText"
            app:tabIndicatorColor="@color/tabIndicatorColor"
            app:tabIndicatorHeight="2dp"


            android:layout_marginBottom="233dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>