<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.verunex.helpmate.LoginActivity">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button

            android:textColor="@color/colorTextIcons"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_height="60dp"
            android:id="@+id/buttonSignIn"

            android:layout_width="160dp"
            android:layout_below="@+id/registerPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:id="@+id/imageMail"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView

            android:id="@+id/imageLock"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/registerPassword"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/registerEmailAddress"

            android:fontFamily="sans-serif"
            android:textColor="@color/colorTextPrimary"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageLock"
            android:layout_marginStart="11dp" />

        <EditText
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/registerPassword"

            android:fontFamily="sans-serif"
            android:textColor="@color/colorTextPrimary"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/registerEmailAddress"
            android:layout_alignStart="@+id/registerEmailAddress" />


    </RelativeLayout>

</RelativeLayout>
